# AI Caller Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================
# Application Settings
# ============================================
APP_NAME=AI Caller
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
SECRET_KEY=change-me-in-production-use-a-random-secret-key-here

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_caller

# ============================================
# Redis Configuration
# ============================================
# Redis connection string for caching and sessions
REDIS_URL=redis://localhost:6379/0

# Celery task queue (uses Redis)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Human agent queue (uses Redis)
HUMAN_AGENT_QUEUE_URL=redis://localhost:6379/3

# ============================================
# OpenAI Configuration
# ============================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_REALTIME_API_URL=wss://api.openai.com/v1/realtime

# ============================================
# Twilio Configuration
# ============================================
# Get credentials from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
# Webhook URL for Twilio callbacks (set this to your deployed URL)
TWILIO_WEBHOOK_URL=http://localhost:8000/webhooks/twilio

# ============================================
# JWT Authentication
# ============================================
# Generate a secure random key for production
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=change-me-in-production-generate-a-secure-random-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# Vector Database Configuration
# ============================================
# Choose one vector database backend:

# Option 1: Pinecone
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=ai-caller-knowledge

# Option 2: Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# Option 3: Chroma (local file-based)
CHROMA_PERSIST_DIR=./chroma_db

# ============================================
# Knowledge Base Settings
# ============================================
KB_CHUNKING_STRATEGY=adaptive
KB_CHUNK_SIZE=1000
KB_CHUNK_OVERLAP=200
KB_EMBEDDING_MODEL=text-embedding-3-small
KB_USE_CACHE=true
KB_CACHE_TTL=3600
KB_HYBRID_SEARCH_ENABLED=true
KB_SEMANTIC_WEIGHT=0.7
KB_KEYWORD_WEIGHT=0.3
KB_RERANKING_ENABLED=true
KB_USE_CROSS_ENCODER=true
KB_TOP_K=5
KB_SIMILARITY_THRESHOLD=0.7
KB_VOICE_OPTIMIZATION=true
KB_MAX_CONTEXT_LENGTH=2000
KB_VOICE_MAX_LENGTH=500
KB_FEEDBACK_ENABLED=true
KB_ANALYTICS_ENABLED=true

# ============================================
# Email Configuration (SMTP)
# ============================================
# Set EMAIL_ENABLED=true to enable email functionality
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=AI Caller

# ============================================
# Frontend Configuration
# ============================================
# Frontend URL for password reset links and redirects
FRONTEND_URL=http://localhost:3000

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
# For development: ["*"] or ["http://localhost:3000"]
# For production: ["https://yourdomain.com"]
CORS_ORIGINS=["*"]

# ============================================
# Feature Flags
# ============================================
QA_ENABLED=true
SENTIMENT_ANALYSIS_ENABLED=true
COMPLIANCE_CHECK_ENABLED=true
ESCALATION_ENABLED=true

# ============================================
# Monitoring
# ============================================
PROMETHEUS_PORT=9090
